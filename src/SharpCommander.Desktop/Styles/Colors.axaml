<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#0078D4</Color>
    <Color x:Key="PrimaryHoverColor">#106EBE</Color>
    <Color x:Key="PrimaryPressedColor">#005A9E</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="AccentColor">#00B4D8</Color>
    <Color x:Key="AccentHoverColor">#0096C7</Color>
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimaryColor">#FFFFFF</Color>
    <Color x:Key="BackgroundSecondaryColor">#F5F5F5</Color>
    <Color x:Key="BackgroundTertiaryColor">#EBEBEB</Color>
    <Color x:Key="BackgroundPrimaryDarkColor">#1E1E1E</Color>
    <Color x:Key="BackgroundSecondaryDarkColor">#252526</Color>
    <Color x:Key="BackgroundTertiaryDarkColor">#2D2D2D</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#1A1A1A</Color>
    <Color x:Key="TextSecondaryColor">#666666</Color>
    <Color x:Key="TextTertiaryColor">#999999</Color>
    <Color x:Key="TextPrimaryDarkColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryDarkColor">#CCCCCC</Color>
    
    <!-- Border Colors -->
    <Color x:Key="BorderColor">#E0E0E0</Color>
    <Color x:Key="BorderDarkColor">#3C3C3C</Color>
    
    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#28A745</Color>
    <Color x:Key="WarningColor">#FFC107</Color>
    <Color x:Key="ErrorColor">#DC3545</Color>
    <Color x:Key="InfoColor">#17A2B8</Color>
    
    <!-- File Type Colors -->
    <Color x:Key="FolderColor">#FFCC00</Color>
    <Color x:Key="ExecutableColor">#28A745</Color>
    <Color x:Key="DocumentColor">#0078D4</Color>
    <Color x:Key="ImageColor">#9C27B0</Color>
    <Color x:Key="VideoColor">#F44336</Color>
    <Color x:Key="AudioColor">#FF9800</Color>
    <Color x:Key="ArchiveColor">#795548</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    
</ResourceDictionary>
